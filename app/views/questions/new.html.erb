<h1>Add an Interview Question</h1>
<%= form_for @question, :html => {:multipart => true} do |f| %>

  <div class="form-group">
    <%= f.label :content, "What is your practice question?" %>
    <%= f.text_field :content, class: "form-control simple-form" %>
    <%= render "shared/error_messages", obj: @question, col: :content %>
  </div>

  <div class="form-group">
    <%= f.radio_button :private, true %>
    <%= f.label :private_true, "Private"%>
    <%= f.radio_button :private, false %>
    <%= f.label :private_false, "Public" %>
  </div>

  <div class="form-group">
    <%= f.fields_for :talking_point do |point| %>
      <%= point.label :phrase, "Add a phrase or word." %>
      <input type="text" name="question[talking_point][phrase][]" id="talking_point_phrase" class="form-control spaced simple-form">

      <div id="morePoints"><!-- This is where more text fields are added -->
      </div>

      <button id="addMore" class="btn btn-default">Add another</button>
    <% end %>
  </div>

  <%= f.submit "Submit", class: "btn btn-default" %>
<% end %>
